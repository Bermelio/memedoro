{
  "manifest_version": 3,
  "name": "Memedoro",
  "version": "1.0.0",
  "description": "Memedoro, un pomodoro con memes que me ayude a concentrarme... o esa es la idea.",
  "action": {
    "default_popup": "src/main.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}